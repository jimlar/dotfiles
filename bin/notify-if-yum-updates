#!/bin/bash

YUM_OUTPUT=$(yum -q check-updates 2>&1)
YUM_EXIT_CODE=$?

case "$YUM_EXIT_CODE" in

0)
  echo No updates available
  ;;

100)
  echo Updates available
  PACKAGES=$(echo $YUM_OUTPUT | awk '{print $1}')
  notify-send -u critical "System updates available:\n $PACKAGES"
  ;;
*)
  notify-send -u critical "Yum failed when checking for updates: $YUM_OUTPUT"
  ;;
esac
