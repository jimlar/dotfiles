# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # They resize the border in the direction you pressed, e.g.
  # when pressing left, the window is resized so that it has
  # more space on its left
  set $resize_step 2

  bindsym j resize shrink left $resize_step px or $resize_step ppt
  bindsym Shift+J resize grow   left $resize_step px or $resize_step ppt

  bindsym k resize shrink down $resize_step px or $resize_step ppt
  bindsym Shift+K resize grow   down $resize_step px or $resize_step ppt

  bindsym l resize shrink up $resize_step px or $resize_step ppt
  bindsym Shift+L resize grow   up $resize_step px or $resize_step ppt

  bindsym odiaeresis resize shrink right $resize_step px or $resize_step ppt
  bindsym Shift+Odiaeresis resize grow   right $resize_step px or $resize_step ppt

          # same bindings, but for the arrow keys
  bindsym Left resize shrink left $resize_step px or $resize_step ppt
  bindsym Shift+Left resize grow   left $resize_step px or $resize_step ppt

  bindsym Down resize shrink down $resize_step px or $resize_step ppt
  bindsym Shift+Down resize grow   down $resize_step px or $resize_step ppt

  bindsym Up resize shrink up $resize_step px or $resize_step ppt
  bindsym Shift+Up resize grow   up $resize_step px or $resize_step ppt

  bindsym Right resize shrink right $resize_step px or $resize_step ppt
  bindsym Shift+Right resize grow   right $resize_step px or $resize_step ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
